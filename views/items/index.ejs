<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Analog Society - Items</title>
  <link rel="stylesheet" href="/styles/main.css">
</head>
<body>

  <div class="slide-in-container">
    <%- include('../partials/header') %>

    <main>
      <h2>Items</h2>
      <a href="/items/new" class="btn btn-primary">Add New Item</a>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Condition</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (items.length === 0) { %>
            <tr>
              <td colspan="4">No items found.</td>
            </tr>
          <% } else { %>
            <% for (const item of items) { %>
              <tr>
                <td><%= item.name %></td>
                <td><%= item.category %></td>
                <td><%= item.condition %></td>
                <td>
                  <a href="/items/<%= item._id %>" class="btn btn-secondary">View</a>
                  <a href="/items/<%= item._id %>/edit" class="btn btn-primary">Edit</a>
                  <form action="/items/<%= item._id %>?_method=DELETE" method="POST" class="inline-form">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </main>

    <%- include('../partials/footer') %>
  </div>

  <script src="/scripts/main.js"></script>
</body>
</html>