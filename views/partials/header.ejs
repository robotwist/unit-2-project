<header>
    <div class="container">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <h1><a href="/" style="text-decoration: none; color: inherit;">Analog Society</a></h1>
            <% if (user) { %>
                <nav>
                    <a href="/dashboard" class="btn btn-secondary" aria-label="Dashboard">Dashboard</a>
                    <a href="/inventory" class="btn btn-secondary" aria-label="My Collection">Collection</a>
                    <a href="/items" class="btn btn-secondary" aria-label="Browse Community">Browse</a>
                    <a href="/trading" class="btn btn-secondary" aria-label="Trading Hub">Trading</a>
                    <a href="/critique" class="btn btn-secondary" aria-label="Discourse">Discourse</a>
                    <span style="color: var(--text-secondary); margin: 0 1rem; font-weight: 500;">Welcome, <%= user.username %></span>
                    <a href="/auth/sign-out" class="btn btn-secondary" aria-label="Sign out">Sign Out</a>
                </nav>
            <% } else { %>
                <nav>
                    <a href="/auth/sign-up" class="btn" aria-label="Join Society">Join Society</a>
                    <a href="/auth/sign-in" class="btn btn-secondary" aria-label="Sign in">Sign In</a>
                </nav>
            <% } %>
        </div>
    </div>
</header>