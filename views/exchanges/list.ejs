<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analog Society - My Exchanges</title> 
    <link rel="stylesheet" href="/styles/main.css"> 
</head>
<body>

    <div class="slide-in-container"> 
        <%- include('../../partials/header') %> 

        <main>
            <h1>My Exchanges</h1>

            <% if (exchanges.length === 0) { %>
                <p>You have no current exchanges.</p>
            <% } else { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Borrower</th>
                            <th>Lender</th>
                            <th>Status</th>
                            <th>Due Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% exchanges.forEach(exchange => { %>
                            <tr>
                                <td>
                                    <% if (exchange.itemId) { %>
                                        <a href="/items/<%= exchange.itemId._id %>"><%= exchange.itemId.name %></a>
                                    <% } else { %>
                                        Item not found
                                    <% } %>
                                </td>
                                <td>
                                    <% if (exchange.borrowerId) { %>
                                        <%= exchange.borrowerId.username %>
                                    <% } else { %>
                                        Unknown
                                    <% } %>
                                </td>
                                <td>
                                    <% if (exchange.lenderId) { %>
                                        <%= exchange.lenderId.username %>
                                    <% } else { %>
                                        Unknown
                                    <% } %>
                                </td>
                                <td>
                                    <span class="status-badge status-<%= exchange.status.toLowerCase() %>">
                                        <%= exchange.status %>
                                    </span>
                                </td>
                                <td><%= new Date(exchange.dueDate).toLocaleDateString() %></td>
                                <td>
                                    <a href="/exchanges/<%= exchange._id %>" class="btn btn-secondary">View</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } %> 
        </main>

        <%- include('../../partials/footer') %> 
    </div>

    <script src="/scripts/main.js"></script>
</body>
</html>
